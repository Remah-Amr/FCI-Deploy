  <div class="container">
      {{#if error}}
          <div class="red-text center"><h3>{{error}}</h3></div>
    {{/if}}
    <h2 class="center orange-text">Exams</h2>
    <ul class="collection ">
{{#each exams}}
 <li class="collection-item avatar">
        <i class="material-icons circle"> 
            <img src="{{owner.imageUrl}}" width="40px" height="40px" >
       </i>
        <span class="title orange-text">{{name}}</span>
        <p class="black-text"><strong>{{duration}} , {{fullMark}} degree</strong></p>
        <a href="/exam/do/{{name}}" class="secondary-content orange-text">
          <span>START</span> 
        </a>
        {{#ifCond owner._id '==' ../person._id}}
         <a href="/exam/results/{{name}}" class=" red-text">
          <span>Results</span> 
        </a>
        {{/ifCond}}
      </li>
{{/each}}  
    </ul>
    {{#ifCond person.role '==' 'teacher'}} 
    <a class="btn orange modal-trigger" href="#terms" >New Exam  <i class="material-icons right">add</i></a>
    {{/ifCond}}
  </div>

         <div id="terms" class="modal">
          <div class="modal-content">
           <h1 class="center orange-text">Create New Exam</h1>
        <form class="col s12" action="/exam/new" method="POST">
        <div class="row">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix" type="text" class="validate" name="name">
                  <label for="icon_prefix"  class="orange-text"> Name</label>
                </div>
                 <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">security</i>
                    <input id="password" type="password" class="validate" name="password">
                    <label for="password"  class="orange-text">CODE</label>
                </div>
              </div>
        </div>
        <div class="row">
             
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix2" type="text" class="validate" name="duration">
                  <label for="icon_prefix2"  class="orange-text"> Duration</label>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix3" type="number" class="validate" name="fullMark">
                  <label for="icon_prefix3"  class="orange-text"> fullMark</label>
                </div>
         </div>
         <div class="input-field center">
             <button class="btn waves-effect waves-light center orange pulse" type="submit" name="action">Submit
                <i class="material-icons right">touch_app</i>
              </button>
         </div>
        </form>
          </div>
        </div>
  <!-- Compiled and minified JavaScript -->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script>
    $(document).ready(function(){
      $('.modal').modal();
    });
  </script>