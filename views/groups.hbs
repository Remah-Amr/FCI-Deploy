     <div id="terms" class="modal">
          <div class="modal-content">
           <h1 class="center orange-text">Create New Room</h1>
        <form class="col s12" action="/room/new" method="POST" enctype="multipart/form-data">
        <div class="row">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix" type="text" class="validate" name="name">
                  <label for="icon_prefix"  class="orange-text"> Name</label>
                </div>
                 <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">security</i>
                    <input id="password" type="password" class="validate" name="password">
                    <label for="password"  class="orange-text">CODE</label>
                </div>
              </div>
        </div>
        <div class="row">
                <div class="file-field input-field col s6 ">
                    <div class="btn orange">
                        <span>Group Icon</span>
                        <input type="file" name="profile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix1" type="text" class="validate" name="description">
                  <label for="icon_prefix1"  class="orange-text"> Description</label>
                </div>
  
         </div>
         <div class="input-field center">
             <button class="btn waves-effect waves-light center orange pulse" type="submit" name="action">Submit
                <i class="material-icons right">touch_app</i>
              </button>
         </div>
        </form>
          </div>
